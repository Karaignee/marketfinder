<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :start %><br />
    <%= f.text_field :start, :class => "date", 'data-value' => @event.start.to_s(:simple) %>
  </div>
  <div class="field">
    <%= f.label :end %><br />
    <%= f.text_field :end, :class => "date", 'data-value' => @event.end.to_s(:simple) %>
  </div>
  <div class="field">
    <%= f.label :repeat %><br />
    <%= f.number_field :repeat %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
 
   </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
