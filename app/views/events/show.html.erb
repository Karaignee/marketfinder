<h1>
	<%= @event.title  %>
</h1>

<p class="lead">
  <strong>Address:</strong>
  <%= @event.location  %>


</p>
<p>
  <strong>Map:</strong>
</p>
<div>

<!--<%#= yield %>  map header should be ABOVE MAP   -->
  <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/?ie=UTF8&amp;ll=<%= @event.latitude %>,<%= @event.longitude %>&amp;spn=0.175236,0.152779&amp;t=m&amp;z=12&amp;output=embed"></iframe>

</div>
<p>
  <strong>Details:</strong>
  <%= @event.description  %>
</p>

<h3>Nearby Events</h3>
<ul>
<% for event in @event.nearbys(30)  %>
    <li><%=  link_to event.location, event %> (<%= event.distance.round(2) %>)</li>

<% end %>
</ul>